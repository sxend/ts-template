{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "typeRoots": ["./node_modules/@types/"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/*", "src/**/*", "tests/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
